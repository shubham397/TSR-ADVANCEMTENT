<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dialursearch.prosperous.LoginActivity"
    android:background="#1a68ca">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00b71c1c"
        android:elevation="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="LOGIN"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/head">

                <TableLayout
                    android:id="@+id/table_invoice"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="0sp"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/txt_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Complain ID : "
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        />

                    <EditText
                        android:id="@+id/edit_invoice"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:ems="10"
                        android:hint="Type Here"
                        android:inputType="text"
                        android:textColor="#ffffff"
                        android:textColorHint="#7b7b7b"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"/>
                </TableRow>
                    <TableRow
                        android:layout_width="0sp"
                        android:layout_height="fill_parent">

                        <Button
                            android:id="@+id/btn_Reset"
                            android:layout_width="100sp"
                            android:layout_height="fill_parent"
                            android:text="Reset"
                            android:layout_column="0"
                            android:background="#003871"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"/>

                        <Button
                            android:id="@+id/btn_Submit"
                            android:layout_width="100sp"
                            android:layout_height="fill_parent"
                            android:text="Submit"
                            android:layout_column="1"
                            android:background="#003871"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="-20sp"/>

                    </TableRow>
                </TableLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_below="@+id/table_invoice"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"/>

        <TableLayout
            android:id="@+id/table_rmn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view">

            <TableRow
                android:layout_width="0sp"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/txt_RMN"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Registered Mobile Number : "
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"/>

                <EditText
                    android:id="@+id/edit_RMN"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:ems="10"
                    android:maxLength="10"
                    android:hint="Type Here"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:textColorHint="#7b7b7b"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"/>
            </TableRow>
            <TableRow
                android:layout_width="0sp"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_ResetRMN"
                    android:layout_width="100sp"
                    android:layout_height="fill_parent"
                    android:text="Reset"
                    android:layout_column="0"
                    android:background="#003871"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"/>

                <Button
                    android:id="@+id/btn_SubmitRMN"
                    android:layout_width="100sp"
                    android:layout_height="fill_parent"
                    android:text="Submit"
                    android:layout_column="1"
                    android:background="#003871"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="55sp"/>

            </TableRow>
        </TableLayout>
            </RelativeLayout>

</RelativeLayout>
