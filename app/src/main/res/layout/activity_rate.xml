<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dialursearch.prosperous.RateActivity"
    android:background="#1a68ca">

    <TextView
        android:id="@+id/txt_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product : "
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="120sp"
        />

    <Spinner
        android:id="@+id/spinner_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_product"
        android:layout_alignBaseline="@+id/txt_product"/>

    <TextView
        android:id="@+id/txt_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service : "
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txt_product"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/txt_product"
        android:layout_alignRight="@+id/txt_product"
        />

    <Spinner
        android:id="@+id/spinner_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_service"
        android:layout_alignBaseline="@+id/txt_service"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Submit"
        android:textSize="25sp"
        android:layout_below="@+id/txt_service"
        android:layout_marginTop="35sp"
        android:layout_marginLeft="90sp"
        />

</RelativeLayout>
